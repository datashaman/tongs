{
  "metadata": {
    "author": {
      "link": "https://datashaman.com/",
      "name": "Marlin Forbes",
      "nickname": "datashaman"
    },
    "site": {
      "link": "https://datashaman-metalsmith.now.sh/",
      "title": "datashaman"
    }
  },
  "source": "src",
  "destination": "build",
  "clean": true,
  "frontmatter": true,
  "plugins": {
    "drafts": true,
    "markdown": {
      "breaksEnabled": true
    },
    "sass": {
      "outputStyle": "expanded"
    },
    "collections": {
      "posts": "posts/*.html"
    },
    "views": {
      "paths": [
        "resources/views"
      ],
      "compiled": "storage/framework/views"
    }
  }
}
