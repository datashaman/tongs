{
  "metadata": {
    "author": {
      "link": "https://bobloblaw.example.com/",
      "name": "Bob Loblaw"
    },
    "site": {
      "link": "https://bobloblawslawblog.example.com/",
      "title": "Bob Loblaw's Law Blog"
    }
  },
  "source": "src",
  "destination": "build",
  "clean": true,
  "frontmatter": true,
  "plugins": {
    "drafts": true,
    "markdown": {
      "breaksEnabled": true
    },
    "sass": {
      "outputStyle": "expanded"
    },
    "collections": {
      "posts": "posts/*.html"
    },
    "views": {
      "paths": [
        "resources/views"
      ],
      "compiled": "storage/framework/views"
    }
  }
}
